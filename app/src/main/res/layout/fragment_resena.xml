<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_resena">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtReseña"
            android:layout_width="190dp"
            android:layout_height="67dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="42dp"
            android:text="Reseña"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtNombre_resena"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="35dp"
            android:background="@color/color_secundary"
            android:backgroundTint="@color/color_secundary"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="text"
            android:textColorHint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtReseña" />

        <EditText
            android:id="@+id/txtTitulo_resena"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="28dp"
            android:background="@color/color_secundary"
            android:backgroundTint="@color/color_secundary"
            android:ems="10"
            android:hint="Titulo"
            android:inputType="text"
            android:textColorHint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre_resena" />

        <EditText
            android:id="@+id/txtFecha_resena"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="29dp"
            android:background="@color/color_secundary"
            android:backgroundTint="@color/color_secundary"
            android:ems="10"
            android:hint="Fecha"
            android:inputType="text"
            android:textColorHint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitulo_resena" />

        <EditText
            android:id="@+id/txtDescripcion_resena"
            android:layout_width="240dp"
            android:layout_height="85dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="22dp"
            android:background="@color/color_secundary"
            android:backgroundTint="@color/color_secundary"
            android:ems="10"
            android:hint="Descripcion"
            android:inputType="text"
            android:textColorHint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtFecha_resena" />

        <TextView
            android:id="@+id/txtCalificacion_resena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="82dp"
            android:layout_marginTop="23dp"
            android:text="Calificacion"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripcion_resena" />

        <CheckBox
            android:id="@+id/cb1_resena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgGalleryLogo" />

        <CheckBox
            android:id="@+id/cb2_resena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@+id/cb1_resena"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <CheckBox
            android:id="@+id/cb3_resena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@+id/cb2_resena"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <CheckBox
            android:id="@+id/cb4_resena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@+id/cb3_resena"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <CheckBox
            android:id="@+id/cb5_resena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@+id/cb4_resena"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="161dp"
            android:layout_marginTop="37dp"
            android:onClick="enviarRes"
            android:text="Enviar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb2_resena" />

        <ImageView
            android:id="@+id/imgGalleryLogo"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/estrella"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCalificacion_resena" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/estrella"
            app:layout_constraintStart_toEndOf="@+id/imgGalleryLogo"
            app:layout_constraintTop_toBottomOf="@+id/txtCalificacion_resena" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="63dp"
            android:src="@mipmap/estrella"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripcion_resena" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="63dp"
            android:src="@mipmap/estrella"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripcion_resena" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="63dp"
            android:src="@mipmap/estrella"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripcion_resena" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>